abstract class Transaction {
protected String transactionId;
protected Date date;
protected double amount;
protected BankAccount account;
protected String note;
 
public Transaction(BankAccount account, double amount, String note) {
this.transactionId = IdUtils.nextId("T");
this.date = new Date(); this.account = account; this.amount = amount; this.note = note;
}
public abstract boolean execute();
public String printReceipt() {
SimpleDateFormat sdf = new SimpleDateFormat("yyyy-MM-dd HH:mm:ss");
return "--- Transaction Receipt ---\n" + "Transaction ID: " + transactionId + "\n" + "Date: " + sdf.format(date) + "\n" +
"Account: " + account.getAccountNumber() + "\n" + "Type: " + this.getClass().getSimpleName() + "\n" + "Amount: ₹" + String.format("%.2f", amount) + "\n" + "Note: " + note + "\n" +
"Balance after: ₹" + String.format("%.2f", account.getBalance()) + "\n" + "	";
}
}
